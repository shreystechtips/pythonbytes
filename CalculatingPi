        "import math\n",
        "\n",
        "MAX_REPS = 10000000000\n",
        "PRINT_SPACE = 10000000\n",
        "piValue = 0\n",
        "\n",
        "def denom(i):\n",
        "  temp = (2*i + 1)\n",
        "  temp*= math.pow(-1,i)\n",
        "  return temp\n",
        "\n",
        "for i in range(MAX_REPS):\n",
        "  piValue += 4/denom(i)\n",
        "  if(i%PRINT_SPACE == 0):\n",
        "    print(piValue)\n",
        "\n",
        "print(piValue)\n"
